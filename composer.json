{
    "name": "hosmelq/laravel-open-graph-image",
    "description": "Generate Open Graph images for your Laravel application.",
    "license": "MIT",
    "keywords": [
        "hosmelq",
        "laravel",
        "meta-tags",
        "open-graph",
        "open-graph-image",
        "open-graph-protocol"
    ],
    "authors": [
        {
            "name": "Hosmel Quintana",
            "email": "hosmelq@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "spatie/browsershot": "^5.0",
        "spatie/laravel-package-tools": "^1.92",
        "spatie/temporary-directory": "^2.3",
        "symfony/process": "^7.3",
        "thecodingmachine/safe": "^3.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "larastan/larastan": "^3.6",
        "laravel/pint": "^1.24",
        "orchestra/pest-plugin-testbench": "^3.2",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.1",
        "rector/type-perfect": "^2.1",
        "shipmonk/composer-dependency-analyser": "^1.8",
        "spaze/phpstan-disallowed-calls": "^4.6",
        "thecodingmachine/phpstan-safe-rule": "^1.4",
        "ticketswap/phpstan-error-formatter": "^1.1",
        "tomasvotruba/type-coverage": "^2.0"
    },
    "suggest": {
        "ext-fileinfo": "Required for the @embedImage directive to detect image MIME types."
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "HosmelQ\\OpenGraphImage\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HosmelQ\\OpenGraphImage\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "OpenGraphImage": "HosmelQ\\OpenGraphImage\\Facades\\OpenGraphImage"
            },
            "providers": [
                "HosmelQ\\OpenGraphImage\\OpenGraphImageServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "phpstan": "phpstan analyse --configuration=phpstan.neon.dist --memory-limit=4G",
        "pint": "pint",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "rector": "rector",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "test": "pest",
        "test-coverage": "pest --coverage"
    },
    "scripts-descriptions": {
        "phpstan": "Run PHPStan static analysis.",
        "pint": "Format code using Laravel Pint.",
        "rector": "Run Rector automated refactoring.",
        "test": "Run the test suite using Pest.",
        "test-coverage": "Run the test suite with code coverage using Pest."
    },
    "$schema": "https://getcomposer.org/schema.json"
}
